extends baseEmail 


block content
    p Hi #{firstName},
    p Forgot your password? Submit request with new password and passwordConfirm to: #{url} 
    p If you didn't forget your password, please ignore this email
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
        tr
        td(align='left')
            table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
                tr
                td
                    a(href=`${url}`, target='_blank') Click to Reset your Password
    